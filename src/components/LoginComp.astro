  <div class="flex flex-col-reverse gap-3 md:flex-row justify-center items-center p-2">
    <figure>
      <LoginImg />
    </figure>
    <div>
      <form action="" method="get">
        <div class="flex flex-col gap-3">
          <h3 class="text-gray-600 font-bold text-2xl px-3 drop-shadow-lg">
            Iniciar sessi√≥n
          </h3>
          <label for="">
            <input
              class="input bg-slate-100"
              type="text"
              name=""
              id=""
              placeholder="Username"
              required
            />
          </label>
          <label for="">
            <input
              class="input bg-slate-100"
              type="password"
              name=""
